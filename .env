# Hospital Management System Environment Variables

# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=CityCare Hospital
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# ============================================
# Server Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:5000/api
VITE_SERVER_PORT=3000

# ============================================
# Backend API Endpoints
# ============================================
VITE_API_ENDPOINT_AUTH=/auth
VITE_API_ENDPOINT_PATIENTS=/patients
VITE_API_ENDPOINT_DOCTORS=/doctors
VITE_API_ENDPOINT_APPOINTMENTS=/appointments
VITE_API_ENDPOINT_SERVICES=/services
VITE_API_ENDPOINT_DEPARTMENTS=/departments
VITE_API_ENDPOINT_BILLING=/billing
VITE_API_ENDPOINT_REPORTS=/reports

# ============================================
# Authentication & Security
# ============================================
VITE_JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
VITE_TOKEN_EXPIRATION=24h
VITE_ENABLE_2FA=false

# ============================================
# Database Configuration (if used on frontend)
# ============================================
# Note: Database credentials should ideally be on backend only
VITE_DB_TYPE=mongodb
VITE_DB_NAME=hospital_db

# ============================================
# Email Configuration
# ============================================
VITE_EMAIL_SERVICE=gmail
VITE_EMAIL_FROM=noreply@citycarehospital.com
VITE_EMAIL_SUPPORT=support@citycarehospital.com

# ============================================
# SMS/Notification Configuration
# ============================================
VITE_SMS_API_KEY=your-sms-api-key
VITE_SMS_API_SECRET=your-sms-api-secret

# ============================================
# Payment Gateway (if applicable)
# ============================================
VITE_PAYMENT_GATEWAY=stripe
VITE_PAYMENT_PUBLIC_KEY=your-payment-public-key
VITE_PAYMENT_ENVIRONMENT=test

# ============================================
# File Upload Configuration
# ============================================
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
VITE_UPLOAD_BASE_URL=http://localhost:5000/uploads

# ============================================
# Session & Cookies
# ============================================
VITE_SESSION_TIMEOUT=3600000
VITE_COOKIE_SECURE=false
VITE_COOKIE_SAME_SITE=lax

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_ONLINE_APPOINTMENTS=true
VITE_ENABLE_TELEMEDICINE=false
VITE_ENABLE_ONLINE_PAYMENT=true
VITE_ENABLE_SMS_NOTIFICATIONS=false
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================
# Analytics & Monitoring
# ============================================
VITE_GOOGLE_ANALYTICS_ID=your-ga-id
VITE_ENABLE_ERROR_TRACKING=true
VITE_SENTRY_DSN=your-sentry-dsn

# ============================================
# Hospital Information
# ============================================
VITE_HOSPITAL_NAME=CityCare Hospital
VITE_HOSPITAL_ADDRESS=123 Medical Drive, City, State 12345
VITE_HOSPITAL_PHONE=+1-234-567-8900
VITE_HOSPITAL_EMAIL=contact@citycarehospital.com
VITE_HOSPITAL_WORKING_HOURS=Mon-Fri: 8:00 AM - 6:00 PM

# ============================================
# Pagination & Display
# ============================================
VITE_ITEMS_PER_PAGE=10
VITE_DEFAULT_LOCALE=en-US
VITE_DATE_FORMAT=MM/DD/YYYY
VITE_TIME_FORMAT=HH:mm

# ============================================
# Development/Debug
# ============================================
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_API_MOCK=false
VITE_API_MOCK_DELAY=500

# ============================================
# Privacy & Compliance
# ============================================
VITE_ENABLE_HIPAA_COMPLIANCE=true
VITE_DATA_RETENTION_DAYS=2555
